.info
  max-width 319px
  letter-spacing .2px
  &__title
    margin-bottom 20px
    color color_white
    opacity .9
    font-size 20px
    text-transform uppercase
  &__text
    color color_white
    opacity .9
    line-height 2
    font-size 10px
    text-transform uppercase


@media all and (max-width: width_sm)
  .info
    max-width 100%
    &__text
      line-height 1.6
      font-size 15px
      text-transform none
      font-weight 300
    &__title
      font-size 22px
      text-transform uppercase
      color color_brown


@media all and (max-width: width_xs)
  .info
    &__text
      font-size 14px