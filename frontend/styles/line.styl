.line
  display flex
  flex-flow row nowrap
  align-items center
  &__text
    margin-left 20px
    color color_white
    opacity .9
    font-size 16px
  &__icon
    width 30px
    &_img
      width 100%


@media all and (max-width: width_xs)
  .line
    &__icon
      width 45px
    &__text
      line-height 1.4
      font-weight 300