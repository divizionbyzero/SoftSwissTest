.footer
  &__big
    display flex
    flex-flow row nowrap
    justify-content space-between
    &_wrap
      margin 0 auto
      padding 100px 0 110px
      background-color color_gray2
  &__line
    padding 22px 0
    background-color color_gray1
  &__themeauthor
    display block
    margin-top 15px
    color color_white
    opacity .9
    font-size 18px
    text-align right


@media all and (max-width: width_sm)
  .footer
    &__big
      flex-flow column wrap
      justify-content center
      &_wrap
        padding 60px 0 40px
    &__themeauthor
      font-size 12px
      text-align center
      font-weight 300
      letter-spacing 0.5px
      margin-top 30px
      color color_brown


@media all and (max-width: width_xs)
  .footer
    &__big
      &_wrap
        padding 40px 0 30px